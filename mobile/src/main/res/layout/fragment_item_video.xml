<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:dividerPadding="30dp"
        android:divider="@android:color/background_dark"
        android:showDividers="middle|beginning|end">

        <TextView
            android:id="@+id/tv_videolistitem_title"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="3"
            android:text="Dr. Strangelove (or) How I learned to stop worrying and love the bomb."
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/tv_videolistitem_artist"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="3"
            android:text="Stanley Kubrick"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_margin="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_videolistitem_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="96 min"
            android:maxLines="3"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp" />
    </LinearLayout>
</LinearLayout>